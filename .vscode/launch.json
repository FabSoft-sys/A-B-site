{
  // Configuração para rodar um servidor local Python na porta 8080
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python HTTP Server (porta 8080)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/serve.py",
      "args": ["-m", "http.server", "8080"],
      "console": "integratedTerminal"
    }
  ]
}